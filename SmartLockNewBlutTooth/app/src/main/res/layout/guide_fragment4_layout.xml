<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/commontitlebar3"
        layout="@layout/activity_commontitlebar"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commontitlebar3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="49dp"
        android:text="是否开锁成功"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt_guide_ture"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_marginRight="76dp"
        android:layout_marginTop="78dp"
        android:layout_toLeftOf="@+id/bt_guide_false"
        android:background="@drawable/guide_btn_bg"
        android:onClick="GuideTrue"
        android:text="成功"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt_guide_false"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bt_guide_ture"
        android:layout_marginRight="71dp"
        android:background="@drawable/guide_btn_bg"
        android:onClick="GuideFalse"
        android:text="失败"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt_guide_false"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"/>
    </LinearLayout>
</RelativeLayout>
