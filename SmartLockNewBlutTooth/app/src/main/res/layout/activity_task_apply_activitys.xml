<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@id/commontitlebar"
        layout="@layout/activity_commontitlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commontitlebar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/task_linearlayout01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_bottom_line"
                android:onClick="selectArea"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/area"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/btn_go_bg"
                    android:gravity="center"
                    android:lines="1"
                    android:onClick="selectArea"
                    android:padding="5dp"
                    android:text="@string/enterSelsct"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_linearlayout02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/task_linearlayout01"
                android:background="@drawable/layout_bottom_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"/>

                <TextView
                    android:id="@+id/task_startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="3"
                    android:background="@drawable/btn_go_bg"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/task_starttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="4"
                    android:background="@drawable/btn_go_bg"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_linearlayout03"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/task_linearlayout02"
                android:background="@drawable/layout_bottom_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"/>

                <TextView
                    android:id="@+id/task_enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="3"
                    android:background="@drawable/btn_go_bg"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/task_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="4"
                    android:background="@drawable/btn_go_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:textSize="18sp">

                    <requestFocus/>
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/task_linearlayoutcenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_linearlayout03"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/neirong"/>

            <LinearLayout
                android:id="@+id/task_linearlayout04"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/task_linearlayoutcenter"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/task_content_application"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_go_bg"
                    android:gravity="top"
                    android:hint="@string/content_apply"
                    android:inputType="text"
                    android:padding="@dimen/margin_5"/>

                <include
                    layout="@layout/voidlist_layout"/>

            </LinearLayout>

            <Button
                android:id="@+id/task_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/task_linearlayout04"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/btn_go_bg"
                android:onClick="submit"
                android:text="@string/submit"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/bt_recorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_submit"
                android:background="@drawable/bt_recorder_pg"
                android:drawableLeft="@mipmap/luyin2x"
                android:paddingLeft="100dp"
                android:paddingRight="110dp"
                android:text="@string/press_talk"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>