<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@color/status_bar_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/title_margin"
                android:paddingRight="@dimen/title_margin">

                <com.xyw.smartlock.common.XCRoundImageView
                    android:id="@+id/userInfo"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_35"
                    android:src="@mipmap/default_icon"/>

                <TextView
                    android:id="@+id/main_title_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_35"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_20"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_bt"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/bluef"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/imgBtn_Add"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:background="@null"
                        android:src="@mipmap/add"/>

                </LinearLayout>

            </LinearLayout>

            <fragment
                android:id="@+id/fragment_cycle_viewpager_content"
                android:name="com.xyw.smartlock.admodle.CycleViewPager"
                android:layout_width="match_parent"
                android:layout_height="210dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <include layout="@layout/circle"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>