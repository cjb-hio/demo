    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="解锁"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/unlock_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commontitlebar"
            android:layout_margin="@dimen/margin_30"
            android:background="@drawable/btn_go_press"
            android:hint="请输入key值"
            android:padding="@dimen/padding_5"/>

    </LinearLayout>

    <Button
        android:id="@+id/unlock_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bottom_radius"
        android:text="@string/click_unlock"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_lock_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ndd"/>

