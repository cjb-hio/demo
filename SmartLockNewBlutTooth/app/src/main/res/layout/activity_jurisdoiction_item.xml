<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/layout_item_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jurisdiction_image"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/jurisdiction_name"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_right_bg"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="操作员"/>

        <TextView
            android:id="@+id/jurisdiction_area"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_left_right_bg"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="区域"/>


        <TextView
            android:id="@+id/jurisdiction_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_left_right_bg"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="账号"/>

        <TextView
            android:id="@+id/jurisdiction_opNo"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>


