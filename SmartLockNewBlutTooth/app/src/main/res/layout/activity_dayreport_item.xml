<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/activity_dayreport_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:lines="1"
        android:text="@string/theName"
        android:background="@drawable/text_left_right_bg"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:textSize="@dimen/textSize_18"/>

    <TextView
        android:id="@+id/activity_dayreport_successful"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/text_left_right_bg"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:lines="1"
        android:text="@string/successfulNumber"
        android:textSize="@dimen/textSize_18"/>

    <TextView
        android:id="@+id/activity_dayreport_failures"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/text_left_right_bg"
        android:lines="1"
        android:text="@string/failuresNumber"
        android:textSize="@dimen/textSize_18"/>

</LinearLayout>
