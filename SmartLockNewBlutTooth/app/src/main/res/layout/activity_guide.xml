<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.xyw.smartlock.activity.GuideActivity">

    <include
        android:id="@+id/commontitlebar3"
        layout="@layout/activity_commontitlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请设备ID:"
            android:visibility="gone"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/guide_task_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:lines="1"
            android:maxLength="16"
            android:background="@drawable/btn_go_bg"
            android:hint="申请设备ID"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_next_guide"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_selector"
        android:onClick="toGupasswd"
        android:text="下一步"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"/>
    </RelativeLayout>

</LinearLayout>
