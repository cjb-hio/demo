<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/AppTheme"
              android:layout_width="wrap_content"
              android:layout_height="500dp"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/arear_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/common_title_color">

        <ImageView
            android:id="@+id/userinfoarea_title_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin"
            android:src="@mipmap/back"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/userinfoarea_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/arear_toolbar"
        android:id="@+id/userInfo_lineat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout_choice">

        <ListView
            android:id="@+id/select_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/gray"
            android:dividerHeight="1dp"/>

        <TextView
            android:id="@+id/area_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="没有其他区域了!"
            android:textColor="@color/Light_blue"
            android:textSize="@dimen/controls_30"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_choice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:background="@color/use_bg"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/area_tv_current_choice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="切换至："
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/margin_10"/>

        <TextView
            android:id="@+id/area_tv_current_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/area_tv_current_choice_title"
            android:layout_toLeftOf="@+id/button"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/black"
            android:lines="1"
            android:textSize="16sp"
            android:text="全部区域"/>

        <Button
            android:id="@+id/userinfoarea_determine"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_selector"
            android:textColor="@color/white"
            android:text="@string/ok"/>

    </RelativeLayout>

</RelativeLayout>