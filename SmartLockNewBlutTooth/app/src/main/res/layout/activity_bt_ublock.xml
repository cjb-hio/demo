<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_grey"
    tools:context=".activity.BtUnlockActivity">
    <include
        android:id="@+id/commontitlebar2"
        layout="@layout/activity_commontitlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commontitlebar2"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"

        >
        <com.xyw.smartlock.bean.MyView
            android:id="@+id/my_view"
            android:background="@mipmap/bluet"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_view"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:id="@+id/bt_btn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/deviceName"
                    android:padding="15dp"
                    android:text="开始搜索设备"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/max"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lishi_line"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="上次连接"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/lishit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_lishi"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bt_unlock"
                android:gravity="center"
                android:text="开锁"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:textColor="@color/zhuangtai_wait"
                android:background="@drawable/zhuangtai_wait_bg"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_above="@+id/unlock_currentArea"
                android:layout_centerHorizontal="true" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
