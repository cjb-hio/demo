<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_title_bar"/>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/unit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_18"/>

                    <TextView
                        android:id="@+id/unit_selectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="@string/enterSelsct"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/team"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_18"/>

                    <TextView
                        android:id="@+id/team_selectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="@string/enterSelsct"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/Send_workers"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_18"/>

                        <TextView
                            android:id="@+id/text_send_work"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/btn_go_bg"
                            android:gravity="center"
                            android:lines="1"
                            android:padding="5dp"
                            android:text="@string/enterSelsct"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_15"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Working_controller"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_18"/>

                        <TextView
                            android:id="@+id/text_send_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/btn_go_bg"
                            android:gravity="center"
                            android:lines="1"
                            android:padding="5dp"
                            android:text="@string/enterSelsct"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_15"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/work_of_personnel"
                            android:textSize="@dimen/textSize_15"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/imageAddButton"
                                android:background="@drawable/edt_go_bg">

                                <TextView
                                    android:id="@+id/addSend_edText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:hint="@string/addImageViewPerson"
                                    android:inputType="textMultiLine"
                                    android:padding="@dimen/margin_5"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textSize_15"/>

                                <TextView
                                    android:id="@+id/addSend_statistics_number"
                                    android:layout_width="@dimen/controls_50"
                                    android:layout_height="@dimen/controls_30"
                                    android:layout_below="@+id/addSend_edText"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/addSend_edText_area"
                                    android:layout_width="@dimen/controls_60"
                                    android:layout_height="@dimen/controls_30"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/addSend_edText"
                                    android:gravity="center"
                                    android:padding="@dimen/margin_5"
                                    android:text="@string/enterSelectArea"/>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/imageAddButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/addbutton"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/planning_beginTime"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/beginDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/beginTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/planning_endTime"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/Working_place_and_job_content"
                        android:textSize="@dimen/textSize_15"/>

                    <EditText
                        android:id="@+id/sendOrderDemo"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edt_go_bg"
                        android:gravity="top"
                        android:hint="@string/enter__JobContent"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/Light_blue"
                        android:textSize="@dimen/textSize_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/traffic_tools_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_18"/>

                    <TextView
                        android:id="@+id/text_send_traffic_tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="@string/enterSelsct"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/driver"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_18"/>

                    <TextView
                        android:id="@+id/text_send_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:background="@drawable/btn_go_bg"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="@string/enterSelsct"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/instruments_tools_materials"
                        android:textSize="@dimen/textSize_15"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textAddProductionTools"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edt_go_bg"
                            android:gravity="top"
                            android:hint="@string/rightImageAdd"
                            android:padding="@dimen/margin_5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_15"/>

                        <ImageView
                            android:id="@+id/imageAddProductionTools"
                            android:layout_width="@dimen/controls_40"
                            android:layout_height="@dimen/controls_40"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:src="@mipmap/addbutton"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/textAddProductionTools2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginRight="@dimen/margin_50"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/edt_go_bg"
                        android:gravity="top"
                        android:hint="@string/rightImageAdd1"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/considerations"
                        android:textSize="@dimen/textSize_15"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <EditText
                            android:id="@+id/textAddSafetyMatters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imageAddSafetyMatters"
                            android:background="@drawable/edt_go_bg"
                            android:hint="@string/rightImageAdd"
                            android:padding="@dimen/margin_5"
                            android:paddingBottom="@dimen/padding_5"
                            android:paddingTop="@dimen/padding_5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_15"/>

                        <ImageView
                            android:id="@+id/imageAddSafetyMatters"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:src="@mipmap/addbutton"/>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:layout_marginLeft="@dimen/margin_60"
                    android:layout_marginRight="@dimen/margin_60"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@drawable/btn_selector"
                    android:text="@string/submit"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>