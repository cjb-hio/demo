<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/status_bar_color">

        <ImageView
            android:id="@+id/lockstat_title_back"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin"
            android:scaleType="center"
            android:src="@mipmap/back"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/lockstat_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"/>

        <ImageView
            android:id="@+id/lockstat_title_search"
            android:layout_width="@dimen/margin_55"
            android:layout_height="@dimen/margin_55"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:scaleType="center"
            android:src="@mipmap/sousuo"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/text_squre_bg"
            android:text="@string/theName"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_squre_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/successfulNumber"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_squre_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/failuresNumber"/>

    </LinearLayout>

    <ListView
        android:id="@+id/dayreportlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"/>

</LinearLayout>
